<% provide :title, t("update.user.update_password") %>
<h1><%= t("update.user.update_password") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render "shared/error_messages" %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password, t("signup.password_field") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("signup.password_confirmation_field") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("update.user.update_password"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
