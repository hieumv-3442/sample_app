<% provide :title, t("home.title") %>
<% if logged_in? %>
  <div class="container">
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
        <section class="micropost_form">
          <%= render "shared/micropost_form" %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3><%= t "micropost.title" %> </h3>
        <%= render "shared/feed" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t("home.heading") %></h1>
    <h2><%= t("help.description_1") %>
      <%= link_to t("home.link"), Settings.link.rails_home%>.
    </h2>
    <%= link_to t("signin.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
