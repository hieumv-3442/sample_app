<%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, t("signup.name_field") %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email, t("signup.email_field")  %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, t("signup.password_field") %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, t("signup.password_confirmation_field") %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit @title_btn, class: "btn btn-primary" %>
<% end %>
