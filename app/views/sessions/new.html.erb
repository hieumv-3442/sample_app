<% provide(:title, t("signin.title")) %>
<h1><%= t("signin.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label :email, t("signin.email_field") %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, t("signin.password_field") %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%=t("signin.remember")%></span>
      <% end %>

      <%= f.submit t("signin.title"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("signin.new_user") %> <%= link_to t("signin.signup"), signup_path %></p>
  </div>
</div>
